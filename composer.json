{
    "name": "chappy-php/chappy-php-framework",
    "description": "A lightweight and extensible PHP MVC framework.",
    "type": "library",
    "license": "MIT",
    "authors": [
      {
        "name": "Chad Chapman",
        "email": "chad.chapman2010@gmail.com"
      }
    ],
    "autoload": {
        "psr-4": {
            "Chappy\\": "src/",
            "Core\\": "src/core/",
            "Console\\": "src/console/",
            "Console\\Commands\\": "src/console/commands/",
            "Console\\Helpers\\": "src/console/helpers/"
        },
        "classmap": ["src"]
    },
    "require": {
      "php": ">=8.3",
      "vlucas/phpdotenv": "^5.6",
      "symfony/console": "^7.1",
      "symfony/filesystem": "^7.1",
      "symfony/var-dumper": "^7.2",
      "filp/whoops": "^2.17",
      "nesbot/carbon": "^3.8",
      "fakerphp/faker": "^1.24",
      "smknstd/fakerphp-picsum-images": "^1.0",
      "ramsey/uuid": "^4.7",
      "doctrine/inflector": "^2.0",
        "tinymce/tinymce": "^7.7"
    },
    "require-dev": {
      "phpunit/phpunit": "^11.3"
    },
    "scripts": {
      "build-docs": [
        "@php src/api-docs/doctum.phar update src/api-docs/doctum.php"
      ],
      "post-install-cmd": [
        "@php src/scripts/setup.php"
      ]
    }
  }
